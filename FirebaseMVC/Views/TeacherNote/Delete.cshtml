@model AlStudente.Models.TeacherNoteViewModel

@{
    ViewData["Title"] = "AlStudente - {Model.TeacherNote.Title}"; 
}

@if (Model.Teacher.Id == Model.TeacherNote.TeacherId)
{
    <h3>Are you sure you want to delete @Model.TeacherNote.Title?</h3>
    <hr />
    <form asp-action="Delete">
        <input asp-for="@Model.TeacherNote.Id" type="hidden" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <input type="hidden" asp-for="@Model.TeacherNote.StudentId" value="@Model.TeacherNote.StudentId" />
    </form>
        <div class="container pt-5">
            <dl class="row justify-content-between">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model)Published
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TeacherNote.CreateDateTime)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model)Notes
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TeacherNote.Content)
                </dd>
            </dl>
        </div>
}

<div>
    <div>
        <a asp-action="Details" asp-route-id="@Model.TeacherNote.Id">Back to Details</a>
    </div>
</div>
