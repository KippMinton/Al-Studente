@model AlStudente.Models.ViewModels.TeacherUserViewModel
@{
    ViewData["Title"] = "AlStudente - {Model.DisplayName}";
}

<div class="text-center">
    <h1 class="display-4">Welcome @Model.UserProfile.DisplayName</h1>
</div>

<div class="container pt-5">
    <h4>@Model.UserProfile.FullName</h4>
    <hr />
    @if (!string.IsNullOrWhiteSpace(Model.UserProfile.ImageLocation))
    {
        <section class="row justify-content-center">
            <div>
                <img src="@Model.UserProfile.ImageLocation" />
            </div>
        </section>
    }
    <dl class="row justify-content-between">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserProfile.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserProfile.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserProfile.DisplayName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserProfile.DisplayName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserProfile.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserProfile.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserProfile.CreateDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserProfile.CreateDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserProfile.UserType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserProfile.UserType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.AcceptingStudents)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.AcceptingStudents)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.LessonRate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.LessonRate)
        </dd>
    </dl>
</div>



@{ var dummy = Model.Students.FirstOrDefault();}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => dummy.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => dummy.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => dummy.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => dummy.LessonDayId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Students)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LessonDayId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>





<div class="row justify-content-center">
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
