@model AlStudente.Models.ViewModels.StudentUserViewModel

@{
    ViewData["Title"] = "AlStudente";
}

@if (Model.Teacher.Id == Model.Student.TeacherId)
{
    <h3>Are you sure you want to delete @Model.UserProfile.DisplayName?</h3>
    <hr />
    <form asp-action="DeleteFromRoster">
        <input asp-for="@Model.Student.Id" type="hidden" />
        <input type="hidden" asp-for="@Model.Student.UserId" value="@Model.Student.UserId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <div class="container pt-5">
        <dl class="row justify-content-between">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model)Full Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserProfile.FullName)
            </dd>
        </dl>
    </div>
}

<div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
